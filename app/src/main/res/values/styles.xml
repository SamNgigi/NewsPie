<resources>

    <!-- Original application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
    </style>

    <!--   This is how we change the title text color on the action bar. -->
    <style name="CustomToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/mintCream</item>
    </style>

    <!--TODO This is the one in use-> Base application theme-->
    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!--Adding it-->
        <item name="android:actionOverflowButtonStyle">@style/OverFlowIcon</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/mintCream</item>
    </style>
    <!--Style to change the default vertical dotted menu-->
    <style name="OverFlowIcon" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_black_24dp</item>
    </style>

</resources>
