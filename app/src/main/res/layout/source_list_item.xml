<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:padding="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="7dp"
        android:layout_centerInParent="true">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="7dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentStart="true"
                    app:civ_circle_background_color="@color/colorPrimary"
                    android:src="@drawable/ic_newspaper_two"
                    android:id="@+id/def_image"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/app_name"
                    android:textColor="@color/secondaryTheme2"
                    android:textSize="20sp"
                    android:id="@+id/sourceName"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/general"
                    android:layout_below="@+id/sourceName"
                    android:id="@+id/sourceCategory"/>

                    <TextView
                        android:padding="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_bookmark"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/bookMark"/>

            </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>
